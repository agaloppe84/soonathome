<div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center bg-light">
  <div class="col-md-5 p-lg-5 mx-auto my-5">
    <h1 class="font-weight-bold text-dark">Cat√©gories</h1>
  </div>
  <div class="product-device box-shadow d-none d-md-block"></div>
  <div class="product-device product-device-2 box-shadow d-none d-md-block"></div>
</div>




<div class="container mt-5">
  <div class="d-flex align-items-center">
    <h5 class="font-weight-bold text-dark">Categories</h5>
    <strong class="ml-2 mr-2"> > </strong>
    <h5 class="font-weight-light text-muted"><%= "#{@categories.size} items" %></h5>
  </div>
</div>



<div class="container mt-5">

  <div class="row mb-2">

      <% @categories.each do |cat| %>

        <div class="col-md-6">
          <%= link_to cat do %>
          <div class="card flex-md-row mb-4 box-shadow h-md-250" style="background-color: <%= cat.dynamic_color %>;">
            <div class="card-body d-flex align-items-center justify-content-between">
              <h4 class="text-light font-weight-bold"><%= cat.name.capitalize %></h4>
              <h5 class="text-light"><%= "#{cat.posts.size} Articles" %></h5>
            </div>
          </div>
          <% end %>
        </div>

      <% end %>


  </div>

</div>
