<div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center bg-light">
  <div class="col-md-5 p-lg-5 mx-auto my-5">
    <h1 class="font-weight-bold text-dark">Articles</h1>
  </div>
  <div class="product-device box-shadow d-none d-md-block"></div>
  <div class="product-device product-device-2 box-shadow d-none d-md-block"></div>
</div>



<div class="container mt-5 mb-5">
  <div class="d-flex align-items-center">
    <h5 class="font-weight-bold text-dark">Articles</h5>
    <strong class="ml-2 mr-2"> > </strong>
    <h5 class="font-weight-light text-muted"><%= "#{@posts.size} items" %></h5>
  </div>
</div>





<div class="container">

  <div class="row mb-2">

      <% @posts.reverse.each do |post| %>

        <div class="col-md-6">
          <div class="card flex-md-row mb-4 box-shadow h-md-250">
            <div class="card-body d-flex flex-column align-items-start">

              <div class="d-flex justify-content-between align-items-center" style="width: 100%;">

              <h4 class="mb-0">
                <a class="text-dark font-weight-bold" href="#"><%= post.title.capitalize %></a>
              </h4>
              <div class="font-weight-bold" style="color: <%= post.category.dynamic_color %>;"><%= post.category.name.capitalize %></div>

              </div>



              <p class="card-text mb-3 mt-3 text-muted"><%= post.body %></p>

              <div class="d-flex justify-content-between align-items-center" style="width: 100%;">
                <%= link_to 'Lire la suite', post, class: "text-secondary font-weight-bold" %>
                <div class="d-flex">
                  <small class="text-muted mr-1">Ajout√© le</small>
                  <small class="text-dark"><%= post.formatted_date %></small>
                </div>
              </div>


            </div>
          </div>
        </div>

      <% end %>


  </div>

</div>
